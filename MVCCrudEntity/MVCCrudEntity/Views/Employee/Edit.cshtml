@model MVCCrudEntity.Models.Employee

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center text-primary">Edit Employee</h1>
                    <div class="card-body">
                        <form asp-action="Edit" method="post">
                            <div class="form-group mb-3">
                                <label asp-for="Name"></label>
                                <input type="hidden" asp-a-for="Id"/>
                                <input asp-for="Name" class="form-control" placeholder="Enter Employee Name" />
                            </div>     
                            <div class="form-group mb-3">
                                <label asp-for="City"></label>
                                <input asp-for="City" class="form-control" placeholder="Enter Employee City" />
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="State"></label>
                                <input asp-for="State" class="form-control" placeholder="Enter Employee State" />
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Salary"></label>
                                <input asp-for="Salary" class="form-control" placeholder="Enter Employee Salary" />
                            </div>
                            <div class="form-group mb-3 text-center">
                                <input type="submit" value="Submit" class="btn btn-outline-success" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
