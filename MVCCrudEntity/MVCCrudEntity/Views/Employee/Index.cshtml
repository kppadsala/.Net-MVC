@model IEnumerable<MVCCrudEntity.Models.Employee>

@{
    ViewData["Title"] = "Employee List";
}

<div class="container mt-5">
    <h2 class="text-primary text-center">Employee List</h2>
    <a asp-action="Create" class="btn btn-success">Create Employee</a>
    <table class="table table-bordered table-striped mt-4">
        <thead>
            <tr>
                <th>Name</th>
                <th>City</th>
                <th>State</th>
                <th>Salary</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var emp in Model)
            {
                <tr>
                    <td>@emp.Name</td>
                    <td>@emp.City</td>
                    <td>@emp.State</td>
                    <td>@emp.Salary</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@emp.Id" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@emp.Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this employee?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
