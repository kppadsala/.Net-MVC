@model StronglyTypeHtmlHelpers.Models.Calculation
@{
    ViewData["Title"] = "Privacy Policy";
}
<h1>@ViewData["Title"]</h1>

@using (Html.BeginForm())
{
    <p>@Html.LabelFor(Model => Model.num1) &nbsp; @Html.TextBoxFor(Model => Model.num1)</p>
    <p>@Html.LabelFor(Model => Model.num2) &nbsp; @Html.TextBoxFor(Model => Model.num2)</p>

    <input type="submit" value="Submit" />

    <p>Addition Of Num1 And Num2 = @ViewBag.result </p>
}
